<div class="ui grid">
  <div class="two wide column"></div>
    <div class="twelve wide column">

    	<%= form_for @tracking_form, :html => { :class => "ui form attached fluid segment" } do |f| %>

    	  <% if @tracking_form.errors.any? %>
  			  <div class="ui teal message" data-sr='ease-in-out'>
  				  <div class="header">
  				  		Oops! Please check the following:
  				  </div>
  				  <% @tracking_form.errors.full_messages.each do |msg| %>
  				  <ul class="list">
  				    <li><%= msg %></li>
  				  </ul>
  				  <% end %>   
  			  </div>
		    <% end %>

        <h2 class="ui center aligned icon header" data-sr='ease-in-out'>
          <i class="circular file text outline icon"></i>
          Transaction Details
        </h2>
        <div class="ui hidden divider"></div> <div class="ui hidden divider"></div>

          <div class="two fields">
              <div class="field">
                <label>Date Filed:</label>
                <%= f.text_field :date_filed, :class => 'datepicker', :placeholder => 'Select Date' %>
              </div>

              <div class="field">
                <label>Type of Transaction</label>
                <%= f.select :transaction_type, ['Reimbursement of Travel Expense','Salary', 'Payment for Creditor', 'Activity Proposal', 'Other Transaction'], :prompt => 'Select Transaction Type' %>
              </div>

          </div>

          <div class="field">
              <label>Transaction Name</label>
              <%= f.text_area :transaction_name, autocomplete: "off", :placeholder => "Enter Transaction Name" %>
          </div>

          <div class="two fields">

              <div class="field">
                <label>Prepared By:</label>
                <%= f.text_field :prepared_by, :maxlength => 40, :size => 40, autocomplete: "off", :placeholder => "Enter Name" %>
              </div>

              <div class="field">
                <label>Division | Section | Unit</label>
                    <%= f.collection_select :department, Department.order(:name), :name, :name, :prompt => "Select Department" %> 
              </div>

          </div>

          <div class="two fields">
            
            <div class="field">
              <label>Amount</label>
              <%= f.text_field :amount, autocomplete: "off", :placeholder => "Enter amount to be claimed" %>
            </div>

            <div class="field">

              <div class="ui hidden divider"></div>

                  <div class="inline fields">
                    <div class="field">
                      <div class="ui toggle checkbox">
                        <%= f.check_box :complete_docs %>
                        <label>Complete Docs</label>
                      </div>
                    </div>

                    <div class="field">
                      <div class="ui toggle checkbox">
                        <%= f.check_box :pending %>
                        <label>Pending</label>
                      </div>
                    </div>
                  </div>

            </div>

          </div>

          <div class="field">
              <label>State reason for pending <br> 
              </label>
              <%= f.text_area :pending_information, autocomplete: "off", :placeholder => "Enter Pending Information" %>
          </div>
          
          <div class="two fields">
            <div class="field">
              <%= f.submit "Create", :class => 'ui fluid primary button' %> 
            </div>
            
            <div class="field">
              <%= link_to('Cancel', root_path, :class => 'ui fluid button')  %>
            </div>
          </div>

	    <% end %>
          
    	</div>
    </div><!-- 12 column -->
    <div class="two wide column"></div>
</div><!-- grid -->


