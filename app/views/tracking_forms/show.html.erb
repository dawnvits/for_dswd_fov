<div class="ui page grid center aligned">
    <div class="sixteen wide column">

	    <div class="dividing header"></div>

		<div class="ui tall stacked segment">

			  	<div class="ui page grid">

			  			<div class="eight wide column">
			  				<div class="ui hidden divider"></div>

							<h2 class="ui icon header center aligned" data-sr='ease-in'>
							  <i class="file text outline icon"></i>
							  <div class="content">
							    Form Information
							  </div>
							  	<% if @tracking_form.origination_dept == current_employee.department || current_employee.admin %>
							  		<%= link_to('Manage Form', edit_tracking_form_path(@tracking_form.id), :class => 'ui button', :'data-sr' => 'ease-in') %>
							  	<% end %>
							</h2>

							<div class="ui hidden divider"></div>
							
							<div class="ui relaxed list" data-sr='ease-in'>	

							  <div class="item" data-sr='ease-in'>   
							    <div class="content">
							      <div class="header"> <%= @tracking_form.form_type %> Date of Filing: </div>
							      <div class="description"><%= @tracking_form.date_filed.strftime('%B %d, %Y') %></div>
							    </div>
							  </div>

							  <div class="item" data-sr='ease-in'>   
							    <div class="content">
							      <div class="header"> Form UID </div>
							      <div class="description"><%= @tracking_form.uid %></div>
							    </div>
							  </div>
			
							  <div class="item" data-sr='ease-in'>   
							    <div class="content">
							      <div class="header">Transaction Name:</div>
							      <div class="description"><%= @tracking_form.transaction_name %></div>
							    </div>
							  </div>

							  <% if @tracking_form.amount_to_be_claimed != 0 %>
							  	<div class="item" data-sr='ease-in'>   
								    <div class="content">
								      <div class="header">Amount to be claimed:</div>
								      <div class="description"> <%= number_with_precision(@tracking_form.amount_to_be_claimed, precision: 2) %></div>
								    </div>
								</div>
							  <% end %>

							  <div class="item" data-sr='ease-in'>   
							    <div class="content">
							      <div class="header">Prepared by:</div>
							      <div class="description"><%= @tracking_form.prepared_by %> of <%= @tracking_form.department%></div>
							    </div>
							  </div>

							  <div class="item" data-sr='ease-in'>   
							    <div class="content">
							    	<div class="header">Status: </div>
							        <% if @tracking_form.approved_by_division_chief %>
									    <div class="description">Approved </div>
							     	<% elsif !@tracking_form.approved_by_division_chief && @tracking_form.returned %>
									    <div class="description">Returned and Pending </div>
									    <div class="ui inverted red segment">
									    	Pending due to:
									    	<%= @tracking_form.pending_info %> 
									    </div>
									     <div class="ui inverted red segment">
									     	Returned due to:
									    	<%= @tracking_form.return_notice %> 
									    </div>
									<% elsif !@tracking_form.approved_by_division_chief %>
									    <div class="description">Pending </div>
									    <div class="ui inverted red segment">
									    	<%= @tracking_form.pending_info %> 
									    </div>
									<% elsif @tracking_form.returned %>
									    <div class="description">Pending </div>
									    <div class="ui inverted red segment">
									    	<%= @tracking_form.return_notice %> 
									    </div>
									<% end %>
							    </div>
							  </div>
							  
							</div><!-- ui list -->
							<div class="ui hidden divider"></div>

							<h2 class="ui icon header center aligned" data-sr='ease-in'>
							  
							  <i class="comments outline icon"></i>
							  <div class="content">
							    Remarks
							  </div>

							  <% if @tracking_form.origination_dept == current_employee.department || current_employee.admin %>
							  		<%= link_to('Add Remark', add_remark_tracking_form_path(@tracking_form.id), :class => 'ui button') %>
							  <% end %>

							  

							</h2>

							<div class="ui relaxed divided list">
								<% @remark.each do |remark| %>
								  <div class="item" data-sr='ease-in'>   
								    <div class="content">
								      <div class="description">
								      		<%= remark.content %>
								      		<small>
								      			<em>added on <%= remark.created_at.strftime('%B %d, %Y at %I: %M %p') %></em>
								      		</small> 
								      </div>
								    </div>
								  </div>
								<% end %>
							</div>					
			  			</div><!-- eight column -->

			  			<div class="ui vertical divider">
			  				<i class="plus icon"></i>
    					</div>

			  			<div class="eight wide column">

			  				<div class="ui hidden divider"></div>
			  				
			  				<h2 class="ui icon header center aligned" data-sr='ease-in'>
							  <i class="calendar outline icon"></i>
							  <div class="content">
							    History
							  </div>
							</h2>
							
							<div class="ui feed">
								<% @history.each do |history| %>
								  <div class="event">
								    <div class="label">
								      <i class="teal wait icon"></i>
								    </div>
								    <div class="content">
								      <div class="summary">
								      	<%= history.description %>
								      </div>
								    </div>
								  </div>
								<% end %>
							</div><!-- feed -->

							<div class="ui relaxed list">
								<div class="item" data-sr='ease-in'>   
								    <div class="content">
								      <div class="header"><%= @tracking_form.form_type %> Current Department:</div>
								       <div class="description"><em><%= @tracking_form.current_dept %></em></div>
								    </div>
							    </div>
							</div>

			  			</div><!-- eight column -->
				    
				</div><!-- ui grid -->
				<div class="ui hidden divider"></div>

		</div><!-- ui segment -->

    </div><!-- 16 column -->
</div><!-- grid -->