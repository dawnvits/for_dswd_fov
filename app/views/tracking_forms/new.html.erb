<div class="ui page grid">

    <div class="ui two column center aligned grid">
  		<div class="column left aligned" data-sr='ease-in-out'>

    	<%= form_for @tracking_form, :html => { :class => "ui form attached fluid segment" } do |f| %>

    	  <% if @tracking_form.errors.any? %>
  			  <div class="ui teal message" data-sr='ease-in-out'>
  				  <div class="header">
  				  		Oops! Please check the following:
  				  </div>
  				  <% @tracking_form.errors.full_messages.each do |msg| %>
  				  <ul class="list">
  				    <li><%= msg %></li>
  				  </ul>
  				  <% end %>   
  			  </div>
		    <% end %>

        <h2 class="ui center aligned icon header">
          <i class="circular file text outline icon"></i>
          Form Information
        </h2>
        <div class="ui hidden divider"></div> <div class="ui hidden divider"></div>

          <div class="two fields">
              <div class="field">
                <label>Date Filed:</label>
                <%= f.text_field :date_filed, :class => 'datepicker', :placeholder => 'Select Date' %>
              </div>

              <div class="field">
                <label>Form Type</label>
                <!-- Form Types Selection -->
                <%= f.select :form_type, ['Travel Expense Form','Salary Form', ' Requisition Slip Form', 'Purchase Request Form', 'Disbursement Voucher Form'], :selected => 'Travel Expense Form' %>
              </div>

          </div>

          <div class="field">
              <label>Transaction Name</label>
              <%= f.text_area :transaction_name, autocomplete: "off", :placeholder => "Enter Transaction Name" %>
          </div>

          <div class="two fields">
              <div class="field">
                <label>Prepared By:</label>
                <%= f.text_field :prepared_by, :value => "#{current_employee.first_name} #{current_employee.middle_name} #{current_employee.last_name}", :maxlength => 40, :size => 40, autocomplete: "off", :placeholder => "Enter Name" %>
              </div>

              <div class="field">
                <label>Department</label>
                    <%= f.collection_select :department, Department.order(:name), :name, :name, :selected => current_employee.department %> 
              </div>

          </div>

          <div class="two fields">
            
            <div class="field">
              <label>Amount to be claimed: <br>
                  <small>(Leave blank if not required)</small>
              </label>
              <%= f.text_field :amount_to_be_claimed, autocomplete: "off", :placeholder => "Enter amount to be claimed" %>
              
            </div>

            <div class="field">
                  <div class="ui hidden divider"></div> 
                  <div class="ui hidden divider"></div> 
                  <div class="ui radio checkbox">
                      <%= f.check_box :approved_by_division_chief %>
                      <label>Approved by Division Chief</label>
                  </div>
            </div>

          </div>

          <div class="field">
              <label>State reason for pending <br> 
                <small>(Leave blank if aprroved by Division Chief)</small>
              </label>
              <%= f.text_area :pending_info, autocomplete: "off", :placeholder => "Enter Pending Information" %>
          </div>
          
          <div class="two fields">
            <div class="field">
              <%= f.submit "Create", :class => 'ui fluid primary button' %> 
            </div>
            
            <div class="field">
              <%= link_to('Cancel', root_path, :class => 'ui fluid button')  %>
            </div>
          </div>

	    <% end %>
          
    	</div>
    </div><!-- 16 column -->
</div><!-- grid -->


