<!DOCTYPE html>
<html>
<head>
  <title>System Administrator</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <style> [data-sr] { visibility: hidden; } </style>
</head>
<body>


<div class="ui teal inverted menu">

	  <div class="header item">
	    System Administrator
	  </div>

	  <% if !flash[:notice].blank? %>
	  		<div class="active item">
	  			<%= flash[:notice] %>
	  		</div>
	  <% end %>

	  <div class="right menu">

	  	  <%= link_to_unless_current('<i class="chevron circle left icon"></i> Home'.html_safe, admin_index_path, :class => 'item', :'data-content' => 'Return Home', :'data-variation' => 'large ') %>
	  		
	  	  <%= active_link_to('<i class="user icon"></i> Employee Accounts'.html_safe, employees_path, :class => 'item', :'data-content' => 'Manage Employee Accounts', :'data-variation' => 'large ') %> 

	  	  <%= active_link_to('<i class="building icon"></i> Departments'.html_safe, departments_path, :class => 'item', :'data-content' => 'Manage Departments', :'data-variation' => 'large ') %>

	  	  <%= link_to('<i class="file text icon"></i> Tracking Forms'.html_safe, root_path, :class => 'item', :'data-content' => 'Manage Tracking Forms', :'data-variation' => 'large ') %>

	  	  <%= link_to('<i class="lock icon"></i>'.html_safe, edit_employee_registration_path, :class => 'item', :'data-content' => 'Account Settings: For security purposes, please change your password every three months.', :'data-variation' => 'wide large') %>  

	  	  <%= link_to('<i class="sign out icon"></i>'.html_safe, destroy_employee_session_path, :method => :delete, :class => 'item', :'data-content' => 'Logout?', :'data-variation' => 'large ' ) %>  
	  
	  </div><!-- right menu -->
</div><!-- ui  menu -->

<!--before yield -->
	<%= yield %>
<!--after yield -->

</body>
</html>